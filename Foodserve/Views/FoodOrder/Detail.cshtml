@*@model IEnumerable<FoodServe.Models.OrderDetailModel>*@
@{ var orderDetail  = ViewData["OrderDetails"] as IEnumerable<FoodServe.Models.OrderDetailModel>; }

<h3>Order Detail </h3>
<p>
    <a asp-action="CreateDetail">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => orderDetail.First().OrderId)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => orderDetail.First().FoodName)
            </th> 
            <th>
                @Html.DisplayNameFor(model => orderDetail.First().Qty)
            </th> 
        </tr>
    </thead>
    <tbody>
        @if (orderDetail != null) {
        foreach (var item in orderDetail)
{
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.OrderId)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.FoodName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qty)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DetailId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DetailId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DetailId">Delete</a>
            </td>
        </tr>
    }
}
    </tbody>
</table>
